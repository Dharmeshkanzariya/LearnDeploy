
@model List<Product>
<a asp-action="AddProduct" asp-controller="Home">Add Product</a>
<a asp-action="Calculator" asp-controller="Home">Calculator</a>
<!-- Display the data in an HTML table -->
<table class="table border-1">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="UpdateProduct" asp-route-id="@product.Id" asp-controller="Home"> Edit</a>
                    <a asp-action="DeleteProduct" asp-route-id="@product.Id" asp-controller="Home"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

